<Page x:Class="test.Pay2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pay2">

    <Grid>
        <StackPanel >
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="20" Text="실질적으로 결제가 이루어지는 페이지"
                       Margin="20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 300, 0, 0" >
                <Button x:Name="BtnNext" Content="다음으로" Margin="10, 0"
                        Click="BtnNext_Click"/>
                <Button x:Name="BtnBack" Content="뒤로가기" Click="BtnBack_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
