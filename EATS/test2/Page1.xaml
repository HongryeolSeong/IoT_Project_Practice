<Page x:Class="test.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel x:Name="Start">
            <TextBlock Name="TbWel" FontSize="70">Welcome!</TextBlock>
            <Button Name="btnStart" Margin="20" Click="btnStart_Click" >주문 시작</Button>
            <TextBlock Name="Dclock" FontSize="20" Margin="0, 0, 0, 20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
            <TextBlock x:Name="TxtWait" FontSize="20" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" Loaded="TxtWait_Loaded"/>
        </StackPanel>
    </Grid>
</Page>
