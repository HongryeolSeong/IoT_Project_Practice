            <StackPanel>
                <CheckBox Content="A메뉴" FontSize="20" Margin="10"/>
                <CheckBox Content="B메뉴" FontSize="20" Margin="10"/>
                <CheckBox Content="C메뉴" FontSize="20" Margin="10"/>
                <CheckBox Content="D메뉴" FontSize="20" Margin="10"/>
                <CheckBox Content="E메뉴" FontSize="20" Margin="10"/>
                <CheckBox Content="F메뉴" FontSize="20" Margin="10"/>
                <Button Content="주문 완료" HorizontalAlignment="Right" Margin="0, 30, 30, 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
